<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: `Espresso Emporium`}) %>
    <link rel="stylesheet" href="/styles/reviews-form.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <h1>Reviews Form</h1>

    <form method="POST" action="/reviews/create/<%= id %>">
     <!-- Name input -->
     <label for="name">Name:</label>
     <input type="text" id="name" name="name" required>
     <br>
     <!-- review input -->
     <label for="review">Review:</label>
     <textarea id="review" name="review"></textarea>
     <br>
          <!-- Rating input -->
          <label for="rating">Rating:</label>
          <input type="number" id="rating" name="rating" min="0" max="5">
          <br>
     <button type="submit" id="submitForm" value="Add Review">
        Submit
        </button>
 </form>


    <%- include('./partials/footer.ejs') %>
</body>

</html>
