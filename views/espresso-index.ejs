<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'Espresso Emporium'}) %>
    <link rel="stylesheet" href="/styles/espresso-index.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <main>
        <section class="allEspressos">
            <h1>Espressos</h1>
            <ul class="espresso-grid">
            <ul>
                <% for (let espresso of espressos) { %>
                <li>
                    <figure>
                        <img src="<%= espresso.photo %>">
                        <figcaption>
                            <h4><%= espresso.name %></h4>
                            <p><strong>Roast: </strong><%= espresso.roast %></p>
                            <a href="/espressos/<%= espresso._id %>" class="btn">Learn More</a>
                        </figcaption>
                    </figure>
                </li>
                <% } %>
            </ul>
            </ul>
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>
</body>

</html>
